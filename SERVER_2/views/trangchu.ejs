<!DOCTYPE html>
<html>
<head>
	<title></title>
	<script src="jquery-3.2.1.min.js"></script>
	<script src="socket.io/socket.io.js"></script>
	<script>
	//ket noi server
		var socket = io("http://localhost:3333");
		socket.on("Server-send-mau",function(data){
			$("body").attr("bgColor",data);
		});	
		$(document).ready(function(){
			$("#do").click(function(){
				socket.emit("Client-send-mau","red");
			});
			$("#xanh").click(function(){
				socket.emit("Client-send-mau","blue");
			});
			$("#vang").click(function(){
				socket.emit("Client-send-mau","yellow");
			});
		});
	</script>
	<style type="text/css">
		#do, #xanh, #vang{
			width: 300px;height: 70px;
		}
		#do{
			background-color: red;
		}
		#xanh{background-color: blue;}
		#vang{background-color: yellow;}
	</style>

</head>
<body bgColor="pink">
<div id="do"></div>
<div id="xanh"></div>
<div id="vang"></div>
</body>
</html>